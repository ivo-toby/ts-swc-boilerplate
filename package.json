{
  "name": "ts-swc",
  "version": "1.0.0",
  "description": "",
  "type": "commonjs",
  "scripts": {
    "prepare": "relative-deps",
    "build": "npm run build:swc",
    "build:watch": "run-p prepare build:swc:watch",
    "build:swc:watch": "swc --log-watch-compilation --watch src/  --out-dir build",
    "build:swc": "swc src/ --out-dir build",
    "dev": "nodemon src/index.ts",
    "dev:debug": "nodemon --inspect-brk src/index.ts",
    "clean": "rimraf build",
    "watch": "tsc -w",
    "prestart": "npm run build",
    "start": "run-s build serve",
    "serve": "node build/index.js",
    "serve:watch": "nodemon -d 3",
    "test": "run-p test:unit",
    "test:unit": "mocha \"test/**/*test.{ts,tsx}\"",
    "lint": "./node_modules/.bin/eslint . --ext .js,.jsx,.ts,.tsx ./",
    "fix": "./node_modules/.bin/eslint --fix --ext .js,.jsx,.ts,.tsx ./"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "inversify": "^6.0.1"
  },
  "devDependencies": {
    "rimraf": "^5.0.1",
    "@swc-node/core": "1.10.4",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.69",
    "@swc/helpers": "0.5.1",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.2",
    "@types/validator": "^13.7.17",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "json5": "^2.2.3",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "relative-deps": "^1.0.7",
    "rewire": "^6.0.0",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6",
    "yargs": "^17.7.2"
  }
}
