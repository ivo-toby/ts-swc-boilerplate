{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "module": "NodeNext",
    "target": "ES2022",
    "outDir": "./build",
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "ts-node": {
    "swc": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
